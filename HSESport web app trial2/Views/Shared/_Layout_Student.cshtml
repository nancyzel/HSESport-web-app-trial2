<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HSESport</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HSESport_web_app_trial2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between">
                <a class="navbar-brand me-3" asp-controller="Student" asp-action="StudentPersonalAccount" asp-route-userId="@ViewBag.UserId"><img src="/images/hse-sport-logo.png" alt="HSE Sport Logo" style="width: 110px; height: 30px; vertical-align: middle; margin-right: 10px;"></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <ul class="navbar-nav flex-grow-1" style="flex-direction: row">
                    <li class="nav-item me-3" style="text-align: center; vertical-align: middle; white-space: nowrap">
                        <a class="nav-link text-dark" asp-controller="Student" asp-action="StudentPersonalAccount" asp-route-userId="@ViewBag.UserId">Личный кабинет</a>
                    </li>
                    <li class="nav-item me-3" style="text-align: center; vertical-align: middle; white-space: nowrap">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Schedule" asp-route-userRole="@ViewBag.UserRole" asp-route-userId="@ViewBag.UserId">Расписание</a>
                    </li>
                    <li class="nav-item" style="text-align: center; vertical-align: middle; white-space: nowrap">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="News" asp-route-userRole="@ViewBag.UserRole" asp-route-userId="@ViewBag.UserId">Новости</a>
                    </li>
                </ul>

                <div style="text-align: right; vertical-align: middle">
                    <a asp-area="" asp-controller="Home" asp-action="Index" style="color:red">Выйти из профиля</a>
                </div>
            </div>

        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - HSESport | <a asp-area="" asp-controller="Home" asp-action="Help" asp-route-userRole="@ViewBag.UserRole" asp-route-userId="@ViewBag.UserId">Техническая поддержка</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
