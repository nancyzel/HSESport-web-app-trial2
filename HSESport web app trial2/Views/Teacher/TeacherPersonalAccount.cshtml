
@{
    ViewData["Title"] = "Информация о преподавателе";
    Layout = "_Layout_Teacher";

}
<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-8">
        <div class="card teacher p-3 shadow-sm bg-light rounded">
            <div class="d-flex flex-column align-items-start">
                <p><strong>Фамилия:</strong> @ViewBag.TeacherSurname</p>
                <p><strong>Имя:</strong> @ViewBag.TeacherName</p>
                <p><strong>Отчество:</strong> @ViewBag.TeacherSecondName</p>

                <!--<a href="#" class="btn btn-primary mt-2">Редактировать</a>  нужна ли кнопка редактирования, если сейчас она никуда не ведет
                <p class="mt-3"><strong>Email:</strong> @ViewBag.TeacherEmail</p>-->

                @* --- Форма для изменения логина (Email) и пароля --- *@
                <h4 class="mt-4">Изменить логин и пароль</h4>
                <form asp-controller="Teacher" asp-action="UpdateTeacherCredentials" method="post" class="w-100">
                    <input type="hidden" name="userId" value="@ViewBag.UserId" />

                    <div class="mb-3">
                        <label for="newEmail" class="form-label">Новый Email (логин):</label>
                        <input type="email" class="form-control" id="newEmail" name="newEmail" value="@ViewBag.TeacherEmail" />
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Новый пароль:</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="Оставьте пустым, чтобы не менять" />
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Сохранить изменения</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card teacher p-3 shadow-sm bg-light rounded">
            <p><strong>Преподаваемые секции:</strong></p>
            @if (ViewBag.SectionNames != null && ((List<string>)ViewBag.SectionNames).Any())
            {
                <ul>
                    @foreach (var sectionName in ViewBag.SectionNames)
                    {
                        <li>@sectionName</li>
                    }
                </ul>
            }
            else
            {
                <p>У преподавателя нет закрепленных секций.</p>
            }
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}
