
@{
    ViewData["Title"] = "Информация о преподавателе";
    Layout = "_Layout_Teacher";

}
<h1>@ViewData["Title"]</h1>

<div class="wrapper">
    <div class="row">
        <div class="col-md-8">
            <div class="card teacher p-3 shadow-sm bg-light rounded">
                <div class="d-flex flex-column align-items-start">
                    <p>@ViewBag.TeacherSurname @ViewBag.TeacherName @ViewBag.TeacherSecondName</p>
                    <a href="#" class="btn btn-primary mt-2">Редактировать</a> <!-- нужна ли кнопка редактирования, если сейчас она никуда не ведет -->
                    <p class="mt-3"><strong>Email:</strong> @ViewBag.TeacherEmail</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card teacher p-3 shadow-sm bg-light rounded">
                <!-- Выводит секции, но только по их номеру, что так себе выглядит -->
                <p><strong>Секции:</strong> @ViewBag.TeacherSportSectionId</p>
            </div>
        </div>
    </div>
</div>