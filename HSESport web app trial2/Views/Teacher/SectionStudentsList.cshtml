@model IEnumerable<HSESport_web_app_trial2.Models.Students>
@{
    ViewData["Title"] = "Список студентов секции";
    Layout = "_Layout_Teacher";

    // Безопасно получаем список секций преподавателя.
    // Если ViewBag.TeacherSections пуст, создаем пустой список для предотвращения ошибок.
    List<HSESport_web_app_trial2.Models.Sections> teacherSectionsList = ViewBag.TeacherSections as List<HSESport_web_app_trial2.Models.Sections> ?? new List<HSESport_web_app_trial2.Models.Sections>();

    // Получаем ID выбранной секции из параметров запроса URL.
    // Используем ViewBag.SelectedSectionId, который контроллер устанавливает после логики выбора по умолчанию.
    string selectedSectionId = ViewBag.SelectedSectionId?.ToString() ?? ""; 

    // Имя текущей секции для заголовка.
    // Если ViewBag.SectionName null, используем "Нет закрепленных секций" (если у учителя их нет)
    // или "Все доступные секции" (если учитель выбрал некорректную секцию).
    string currentSectionName = ViewBag.SectionName?.ToString() ?? "Нет закрепленных секций"; 

    // Получаем текущее значение фильтра фамилии из ViewBag
    string searchSurname = ViewBag.SearchSurname?.ToString() ?? "";

    // Получаем режим отображения из ViewBag (true - показывать всех студентов для добавления, false - показывать студентов текущей секции)
    bool showAllStudentsForAdd = ViewBag.ShowAllStudentsForAdd ?? false;
}

<h1>@currentSectionName</h1> @* Отображаем имя текущей или всех секций *@

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}
@if (TempData["Info"] != null)
{
    <div class="alert alert-info">@TempData["Info"]</div>
}


<!-- Единая форма для выбора секции и фильтрации по фамилии -->
<form asp-controller="Teacher" asp-action="SectionStudentsList" method="get" class="mb-3">
    <input type="hidden" name="userId" value="@ViewBag.UserId" />
    <input type="hidden" name="showAllStudentsForAdd" value="@showAllStudentsForAdd.ToString().ToLower()" /> @* Передаем режим обратно в контроллер *@
    
    <div class="wrapper">
        <div class="col-md-4">
            <label for="sectionSelector" class="form-label">Выберите секцию:</label>
            <select name="sectionId" id="sectionSelector" onchange="this.form.submit()" class="form-select">
                
                @if (teacherSectionsList.Any()) // Если у учителя есть секции, перебираем их.
                {
                    @foreach (var sec in ViewBag.TeacherSections)

                    {

                        <option value ="@sec.SectionId"  selected="@(currentSectionName == sec.Name ? "selected" : null)">

                            @sec.Name

                            </option>

                    }
                }
                else // Если у учителя нет закрепленных секций, отображаем это.
                {
                        <option value="">Нет доступных секций</option>
                }
            </select>
        </div>
        
        <div class="col-md-4">
            <label for="searchSurname" class="form-label">Фамилия студента:</label>
            <input type="text" name="searchSurname" id="searchSurname" class="form-control" value="@searchSurname" placeholder="Введите фамилию" />
        </div>
        
        <div class="col-md-2" style="align-items: center; bottom:auto">
            <button type="submit" class="btn btn-primary">Поиск</button>
        </div>
        <div class="col-md-4">
            @* Кнопка для переключения режима отображения студентов *@
            @if (!showAllStudentsForAdd)
            {
                <a asp-action="SectionStudentsList" asp-controller="Teacher" asp-route-userId="@ViewBag.UserId" asp-route-sectionId="@selectedSectionId" asp-route-showAllStudentsForAdd="true" class="btn btn-primary" style="width: 200px">Добавить нового студента на секцию</a>
            }
            else
            {
                <a asp-action="SectionStudentsList" asp-controller="Teacher" asp-route-userId="@ViewBag.UserId" asp-route-sectionId="@selectedSectionId" asp-route-showAllStudentsForAdd="false" class="btn btn-secondary">Вернуться к списку секции</a>
            }
        </div>
    </div>
    
</form>

<table class="table table-bordered mt-3"> @* Добавлен отступ сверху для лучшей читабельности *@
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Email</th>
            @* Колонка "Посещения" отображается только в обычном режиме *@
            @if (!showAllStudentsForAdd) {<th>Посещения</th>}
            <th>Действие</th> @* Колонка для кнопок действия *@
        </tr>
    </thead>
    <tbody>
        @* Проверяем, есть ли студенты для отображения. *@
        @if (ViewBag.Students != null && ((List<HSESport_web_app_trial2.Models.Students>)ViewBag.Students).Any())
        {
            @foreach (var student in ViewBag.Students)
            {
                <tr>
                    <td>@student.Surname</td>
                    <td>@student.Name</td>
                    <td>@student.SecondName</td>
                    <td>@student.Email</td>
                    @* Колонка "Посещения" отображается только в обычном режиме *@
                    @if (!showAllStudentsForAdd) {<td>@student.AttendanceRate</td>}
                    <td>
                        @if (!showAllStudentsForAdd)
                        {
                            @* Кнопки "Добавить/Удалить посещение" для студентов секции *@
                            <form asp-controller="Teacher" asp-action="AddAttendance" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@ViewBag.UserId" />
                                <input type="hidden" name="studentId" value="@student.StudentId" />
                                <input type="hidden" name="sectionId" value="@selectedSectionId" /> @* Используем вычисленный selectedSectionId *@
                                <button type="submit" class="btn btn-success btn-sm">Добавить посещение</button>
                            </form>
                            <form asp-controller="Teacher" asp-action="DeleteAttendance" method="post" class="d-inline">
                                <input type="hidden" name="userId" value="@ViewBag.UserId" />
                                <input type="hidden" name="studentId" value="@student.StudentId" />
                                <input type="hidden" name="sectionId" value="@selectedSectionId" /> @* Используем вычисленный selectedSectionId *@
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены, что хотите удалить посещение?');">Удалить посещение</button>
                            </form>
                        }
                        else
                        {
                            @* Кнопка "Добавить студента на секцию" для всех студентов *@
                            <form asp-controller="Teacher" asp-action="AddStudentToSection" method="post">
                                <input type="hidden" name="userId" value="@ViewBag.UserId" />
                                <input type="hidden" name="studentId" value="@student.StudentId" />
                                <input type="hidden" name="sectionId" value="@selectedSectionId" /> @* Целевая секция, в которую добавляем *@
                                <input type="hidden" name="searchSurname" value="@searchSurname" /> @* Сохраняем поисковый запрос *@
                                <button type="submit" class="btn btn-primary btn-sm">Добавить студента на секцию</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="@(showAllStudentsForAdd ? "5" : "7")" class="text-center">Студенты не найдены.</td>
            </tr>
        }
    </tbody>
</table>
