@model IEnumerable<HSESport_web_app_trial2.Models.Students>
@{
    ViewData["Title"] = "Список студентов секции";
    Layout = "_Layout_Teacher";

    // Безопасно получаем список секций преподавателя.
    // Если ViewBag.TeacherSections пуст, создаем пустой список для предотвращения ошибок.
    List<HSESport_web_app_trial2.Models.Sections> teacherSectionsList = ViewBag.TeacherSections as List<HSESport_web_app_trial2.Models.Sections> ?? new List<HSESport_web_app_trial2.Models.Sections>();

    // Получаем ID выбранной секции из параметров запроса URL.
    string selectedSectionId = Context.Request.Query["sectionId"].ToString();

    // Имя текущей секции для заголовка. Изначально устанавливается на основе переданного sectionId
    // или на "Все доступные секции" если sectionId пуст.
    string currentSectionName = ViewBag.SectionName?.ToString() ?? "Все доступные секции";


    // Если sectionId не передан в URL (первая загрузка или сброс),
    // и у учителя есть хотя бы одна секция, выбираем первую секцию по умолчанию.
    // Это изменение находится в контроллере для корректного перенаправления.
    // Здесь мы просто используем значения, которые уже были установлены контроллером.
    if (string.IsNullOrEmpty(selectedSectionId) && teacherSectionsList.Any() && ViewBag.SectionName != null && ViewBag.SectionName != "Все доступные секции")
    {
        // Это условие будет истинно только если контроллер уже перенаправил на дефолтную секцию.
        // selectedSectionId и currentSectionName уже будут обновлены контроллером.
        // Код для инициализации уже в контроллере.
    }

    // ИЗМЕНЕНИЕ: Получаем текущее значение фильтра фамилии из ViewBag
    string searchSurname = ViewBag.SearchSurname?.ToString() ?? "";
}

<h1>@currentSectionName</h1> @* Отображаем имя текущей или всех секций *@

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- ИЗМЕНЕНИЕ: Единая форма для выбора секции и фильтрации по фамилии -->
<form asp-controller="Teacher" asp-action="SectionStudentsList" method="get" class="mb-3">
    <input type="hidden" name="userId" value="@ViewBag.UserId" />
    
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label for="sectionSelector" class="form-label">Выберите секцию:</label>
            <select name="sectionId" id="sectionSelector" onchange="this.form.submit()" class="form-select">
                @if (teacherSectionsList.Any())
                {
                    @foreach (var sec in ViewBag.TeacherSections)

                    {

                        <option value ="@sec.SectionId"  selected="@(currentSectionName == sec.Name ? "selected" : null)">

                            @sec.Name

                            </option>

                    }
                }
                else
                {
                     <option value="">Нет доступных секций</option>
                }
            </select>
        </div>
        
        <div class="col-md-4">
            <label for="searchSurname" class="form-label">Фамилия студента:</label>
            <input type="text" name="searchSurname" id="searchSurname" class="form-control" value="@searchSurname" placeholder="Введите фамилию" />
        </div>
        
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Поиск</button>
        </div>
    </div>
</form>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Email</th>
            <th>Посещения</th>
            <th>Добавить</th>
            <th>Удаление</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Students != null && ((List<HSESport_web_app_trial2.Models.Students>)ViewBag.Students).Any())
        {
            @foreach (var student in ViewBag.Students)
            {
                <tr>
                    <td>@student.Surname</td>
                    <td>@student.Name</td>
                    <td>@student.SecondName</td>
                    <td>@student.Email</td>
                    <td>@student.AttendanceRate</td>
                    <td>
                        <form asp-controller="Teacher" asp-action="AddAttendance" method="post" class="d-inline">
                            <input type="hidden" name="userId" value="@ViewBag.UserId" />
                            <input type="hidden" name="studentId" value="@student.StudentId" />
                            <input type="hidden" name="sectionId" value="@selectedSectionId" />
                            <button type="submit" class="btn btn-success btn-sm">Добавить посещение</button>
                        </form>
                    </td>
                    <td>
                        <form asp-controller="Teacher" asp-action="DeleteAttendance" method="post" class="d-inline">
                            <input type="hidden" name="userId" value="@ViewBag.UserId" />
                            <input type="hidden" name="studentId" value="@student.StudentId" />
                            <input type="hidden" name="sectionId" value="@selectedSectionId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Вы уверены, что хотите удалить посещение?');">Удалить посещение</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Студенты не найдены в этой секции или по указанной фамилии.</td>
            </tr>
        }
    </tbody>
</table>
