@model HSESport_web_app_trial2.Models.Students

@{
    ViewData["Title"] = "Студент";
    Layout = "Layout_Student";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать, студент!</h1>
</div>

<form asp-controller="Home" asp-action="StudentPersonalInformation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Email" value="@Model.Email">
    <input type="hidden" asp-for="Password" value="@Model.Password">
    <div class="form-group">
        <button type="submit" class="btn btn-light">Просмотреть информацию о своих посещениях</button>
    </div>
</form>
