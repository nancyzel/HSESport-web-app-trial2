@model IEnumerable<HSESport_web_app_trial2.Models.Students>

@{
    ViewData["Title"] = "Index";
}

<h1>Таблица с данными студентов</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentSecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentAttendanceOnSportActivities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentSecondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentAttendanceOnSportActivities)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentIdentificator">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.StudentIdentificator">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentIdentificator">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
